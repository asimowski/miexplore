<% include ../partials/header %>


    <header class="jumbotron">
        <div class="container">
            <h1>MIExplore</h1>
            <p>View our hand-picked campgrounds and hiking locations from all over Michigan!</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campground</a>
            </p>
        </div>
    </header>
    
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6"> 
                    <!--<div class="thumbnail">-->
                        <a href="/campgrounds/<%= campground._id %>" class="thumbnail">
                            <img src="<%= campground.image %>">
                        </a>
                        <div class="caption">
                            <h4> <%= campground.name %> </h4>
                        </div>
                    <!--</div>-->
                </div>
            <% }) %>
    </div>
    
<% include ../partials/footer %>