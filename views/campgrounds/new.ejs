<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center;">Add a New Campground</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="campname">Campground Name</label>
                    <input id="campname" class="form-control" type="text" placeholder="name" name="campname">
                </div>
                <div class="form-group">
                    <label for="photo">Photo of Campground</label>
                    <input id="photo" class="form-control" type="text" placeholder="image url" name="image">
                </div>
                <div class="form-group">
                    <label for="description">Description of Campground</label>
                    <input id="description" class="form-control" type="text" placeholder="description" name="description">
                </div>
                <div class="form-group">
                    <label for="price">Price per night</label>
                    <input id="price" class="form-control" type="number" placeholder="price per night" name="price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Hoffmaster State Park, MI">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
        
    </div>

<% include ../partials/footer %>